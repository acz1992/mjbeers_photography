{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "build" }
		},
		{
			"src": "backend_sanity/package.json",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/backend_sanity/$1"
		},
		{
			"src": "^/static/(.*)",
			"dest": "/frontend/static/$1"
		},
		{
			"src": "/(.*)\\.png",
			"dest": "/frontend/$1.png"
		},
		{
			"src": "/(.*)",
			"dest": "/frontend/index.html"
		}
	]
}
