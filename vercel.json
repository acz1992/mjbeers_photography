{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "build" }
		},
		{
			"src": "backend_sanity/package.json",
			"use": "@vercel/node"
		}
	],
	"rewrites": [
		{
			"source": "/api/(.*)",
			"dest": "/backend_sanity/$1"
		},
		{
			"source": "/(.*)",
			"destination": "/frontend/dist/$1"
		}
	]
}
